<view>
  <swiper
    indicator-dots="{{ true }}"
    indicator-active-color="#fff"
    autoplay="{{ true }}"
    interval="3000"
    vertical="{{ false }}"
  >
    <swiper-item>
      <image src="/images/wx.png"></image>
    </swiper-item>
    <swiper-item>
      <image src="/images/vr.png"></image>
    </swiper-item>
    <swiper-item>
      <image src="/images/iqiyi.png"></image>
    </swiper-item>
  </swiper>

  <block wx:for="{{ post_content }}" wx:for-item="item" wx:for-index="index" wx:key="key">
    <view class="post-container">
      <view class="post-author-date">
        <image class="post-author" src="{{ item.author_img }}"></image>
        <text wx:if="{{ item.text_condition }}" class="post-date">{{ item.date }}</text>
      </view>
      <text class="post-title">{{ item.title }}</text>
      <image class="post-image" src="{{ item.post_img }}"></image>
      <text class="post-content">{{ item.content }}</text>
      <view class="post-like">
        <image class="post-like-image" src="/images/icon/chat.png"></image>
        <text class="post-like-font">{{ item.item.collect_num }}</text>
        <image class="post-like-image" src="/images/icon/view.png"></image>
        <text class="post-like-font">{{ item.view_num }}</text>
      </view>
    </view>
  </block>
</view>
